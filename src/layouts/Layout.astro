---
import { ClientRouter } from 'astro:transitions';
import '../styles/global.css';

export type Props = {
  metadata: {
    title: string;
    description: string;
    lang: string;
  };
};

const { metadata } = Astro.props;
---

<!doctype html>
<html lang={metadata.lang}>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{metadata.title}</title>
    <meta name='description' content={metadata.description} />
    <ClientRouter />
  </head>
  <body class='antialiased font-sans min-h-svh bg-primary'>
    <!-- Spotlight effect -->
    <div id='spotlight' class='spotlight'></div>
    <slot />
  </body>
</html>

<style>
  .spotlight {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 9999;
    background: radial-gradient(
      circle 800px at var(--spotlight-x, 50%) var(--spotlight-y, 50%),
      rgba(255, 255, 255, 0.2),
      transparent 50%
    );
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  body:hover .spotlight {
    opacity: 1;
  }
</style>

<script>
  function initSpotlight() {
    const spotlight = document.getElementById('spotlight');
    if (!spotlight) return;

    let mouseX = 50;
    let mouseY = 50;

    document.addEventListener('mousemove', (e) => {
      mouseX = (e.clientX / window.innerWidth) * 100;
      mouseY = (e.clientY / window.innerHeight) * 100;

      spotlight.style.setProperty('--spotlight-x', `${mouseX}%`);
      spotlight.style.setProperty('--spotlight-y', `${mouseY}%`);
    });
  }

  // Inicializar en la carga
  document.addEventListener('DOMContentLoaded', initSpotlight);

  // Reinicializar después de navegación con ViewTransitions
  document.addEventListener('astro:after-swap', initSpotlight);
</script>
