---
import { cn } from '@/helpers/cn';
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'input'>;

const { class: className, ...rest } = Astro.props as Props;
---

<input
  class={cn(
    'w-full border-b border-white h-14 focus-visible:ring-0 focus:outline-none',
    'text-white font-lexend text-base leading-6',
    'placeholder:text-white ',
    className
  )}
  {...rest}
/>

